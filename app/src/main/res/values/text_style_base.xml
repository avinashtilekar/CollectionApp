<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppFont">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppFontMarathi">
       <!-- <item name="android:fontFamily">@font/shivaji01_normal</item>-->
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- region Text Size-->
    <style name="AppFont.LabelSmall">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AppFont.LabelMedium">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="AppFont.LabelLarge">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="AppFont.XLabelLarge">
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="AppFont.XXLabelLarge">
        <item name="android:textSize">@dimen/_22sdp</item>
    </style>

    <!-- endregion Text Size-->

    <!-- region Marathi Text Size-->
    <style name="AppFontMarathi.LabelSmall">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AppFontMarathi.LabelMedium">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="AppFontMarathi.LabelLarge">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="AppFontMarathi.XLabelLarge">
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="AppFontMarathi.XXLabelLarge">
        <item name="android:textSize">@dimen/_22sdp</item>
    </style>

    <!-- endregion Marathi Text Size-->
</resources>